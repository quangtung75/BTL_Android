<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được chọn -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <solid android:color="@color/md_theme_primary" /> <!-- Màu nền khi chọn -->
            <stroke android:width="2dp" android:color="@android:color/white" /> <!-- Viền trắng -->
        </shape>
    </item>
    <!-- Trạng thái khi không được chọn -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:width="24dp" android:height="24dp" />
            <stroke android:width="2dp" android:color="@color/md_theme_onBackground" /> <!-- Viền xám -->
            <solid android:color="@android:color/transparent" /> <!-- Trong suốt -->
        </shape>
    </item>
</selector>