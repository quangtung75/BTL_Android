<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CollectionsFragment"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Collections"
        android:textStyle="bold"
        android:textSize="26sp"
        android:fontFamily="@font/leckerlione"
        android:gravity="center"
        android:layout_marginVertical="12dp"/>

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/md_theme_onPrimaryContainer"
        app:tabSelectedTextColor="@color/md_theme_onPrimaryContainer"
        app:tabTextColor="@color/md_theme_onSecondaryContainer"/>

    <!-- ViewPager2 để hiển thị danh sách tương ứng -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"/>

</LinearLayout>